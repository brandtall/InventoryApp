extends layout

block content

  h1 #{title}
          
  form(method='POST' action='')
    div.form-group
      label(for='name') Category:
      input#name.form-control(type='text', placeholder='Consumables, Tools or Accessories' name='name' required='true' value=(undefined===category ? '' : category.name) )
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='textarea', placeholder='Shiny, Juicy, Handy' name='description' required='true' value=(undefined===category ? '' : category.description) )
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg